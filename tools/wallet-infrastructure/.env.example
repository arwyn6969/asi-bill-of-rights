# Wallet Infrastructure Environment Variables

# Master encryption key for keystore encryption
# Generate with: openssl rand -hex 32
WALLET_ENCRYPTION_KEY=

# Optional: Use cloud key management service
USE_KMS=false

# AWS KMS (if USE_KMS=true and using AWS)
AWS_KMS_KEY_ID=
AWS_REGION=us-east-1

# GCP KMS (if USE_KMS=true and using GCP)
GCP_KMS_KEY_PATH=

# Azure Key Vault (if USE_KMS=true and using Azure)
AZURE_KEYVAULT_URL=
AZURE_KEY_NAME=

# Keystore file location
KEYSTORE_PATH=./keystore.enc.json

# Logging
LOG_LEVEL=info
AUDIT_LOG_PATH=./audit.log
